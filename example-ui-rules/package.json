{
  "name": "@nexum/ui",
  "version": "0.1.0",
  "description": "Opinionated dark-mode-first UI component library for Nexum projects",
  "author": "Nexum",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./tailwind-preset": {
      "import": "./dist/tailwind-preset.js",
      "require": "./dist/tailwind-preset.cjs",
      "types": "./dist/tailwind-preset.d.ts"
    },
    "./styles": "./dist/styles/base.css",
    "./eslint-config": "./eslint-config.js",
    "./eslint-config.cjs": "./eslint-config.cjs",
    "./eslint-rules": "./eslint-rules/index.js",
    "./tokens.css": "./dist/tokens.css",
    "./stylelint-rules": "./stylelint-rules/index.cjs",
    "./stylelint.config": "./stylelint.config.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "eslint-config.js",
    "eslint-rules",
    "stylelint-rules",
    "stylelint.config.cjs",
    "bin"
  ],
  "scripts": {
    "build": "tsup && npm run generate:css",
    "build:watch": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "generate:css": "node --import tsx scripts/generate-css.ts"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.3.0",
    "stylelint": "^17.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.2"
  },
  "bin": {
    "nexum-lint": "./bin/nexum-lint.cjs"
  }
}
